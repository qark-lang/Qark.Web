@page
@model Qark.Web.Pages.DownloadModel
@{
    ViewData["Title"] = "Download";
}
<section class="section">
    <div class="container">
        <h1 class="title">Downloads</h1>
        <p>Latest version: <strong>0.0.1</strong></p>
        <p>Currently Qark compiler is <em>under development</em>.</p>
        <p>Download the Qark source code or a pre-built installer for your platform, and start developing today.</p>
        <hr />
        <div class="columns has-text-centered">
            <div class="column">
                <h2 class="subtitle">
                    <span class="icon">
                        <span class="icon">
                            <i class="bi bi-windows"></i>
                        </span>
                    </span>
                    <span>Windows</span>
                </h2>
                <a class="button is-warning is-medium" disabled>Download x86</a>
                <p class="has-text-grey">qark-v0.0.1-win32.zip</p>
                <br />
                <a class="button is-warning is-medium" disabled>Download x64</a>
                <p class="has-text-grey">qark-v0.0.1-win64.zip</p>
            </div>
            <div class="column">
                <h2 class="subtitle">
                    <span class="icon">
                        <span class="icon">
                            <i class="bi bi-apple"></i>
                        </span>
                    </span>
                    <span>macOS</span>
                </h2>
                <a class="button is-warning is-medium" disabled>Download x64</a>
                <p class="has-text-grey">qark-v0.0.1-mac64.zip</p>
            </div>
            <div class="column">
                <h2 class="subtitle">
                    <span class="icon">
                        <i class="bi bi-code-square"></i>
                    </span>
                    <span>Source code</span>
                </h2>
                <a class="button is-warning is-medium" disabled>Download</a>
                <p class="has-text-grey">qark-v0.0.1-src.zip</p>
            </div>
        </div>
    </div>
</section>
