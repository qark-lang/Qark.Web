<section class="section">
    <div class="container">
        <h2 class="title is-3 has-text-centered">Syntax</h2>
        <pre>
        <code class="lang-qark line-numbers">
                /*
                    Qark programming language
                    Console application
                */

                import "Console";
                use System;

                // Entry point
                func Main()
                {
                    var con = Console();
                    con.WriteLine("Hello World");
                    con.WriteLine("Привет мир");
                    con.WriteLine("你好，世界");
                    var str = con.ReadLine();
                    var words = Split(str);
                    for(var i = 0; i &lt; words.Length; i++)
                        con.WriteLine(words[i]);
                }

                // Returns an array of words
                func Split(str: String): String[] =>
                    str.Split(' ');

                // Swaps two integer values
                func Swap(x: *Int, y: *Int)
                {
                    var tmp = *x;
                    *x = *y;
                    *y = tmp;
                }

                // Generic function returns maximum value
                func Max&lt;T&gt;(x: T, y: T): T
                {
                    return x >= y ? x : y;
                }
            </code>
        </pre>
    </div>
</section>

