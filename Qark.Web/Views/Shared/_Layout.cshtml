@{
    var name = "Qark Programming Language";
    var title = ViewData["Title"] != null ? $"{ViewData["Title"]} | {name}" : name;
    var description = "Object-oriented, general-purpose, fast, compiled programming language";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@description" />
    <meta name="keywords" content="Qark, programming language, compiled, object-oriented, imperative, multi-paradigm, general-purpose, system, native" />
    <meta name="author" content="Qark Team" />
    <meta name="msapplication-TileColor" content="#4a4b65" />
    <meta name="theme-color" content="#ffffff" />
    <meta property="og:url" content="https://qark.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@title" />
    <meta property="og:site_name" content="@name" />
    <meta property="og:description" content="@description" />
    <meta property="og:image" content="https://qark.dev/qark-social.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="@name" />
    <meta name="twitter:title" content="@title" />
    <meta name="twitter:description" content="@description" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@@qarklang">
    <title>@title</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" />
    <link rel="manifest" href="~/site.webmanifest" />
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="stylesheet" media="screen" href="~/dist/site.css" />
    <partial name="GoogleAnalytics" />
</head>
<body>
    <nav class="navbar is-light" aria-label="main navigation">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" asp-controller="Home" asp-action="Index">
                    <img src="~/qark-logo.svg" width="28" height="28" alt="Qark" />
                    <span class="subtitle mx-3">Qark</span>
                </a>
                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarMain">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div id="navbarMain" class="navbar-menu">
                <div class="navbar-start"></div>
                <div class="navbar-end">
                    <a class="navbar-item" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="navbar-item" asp-controller="Learn" asp-action="Index">Learn</a>
                    <a class="navbar-item" asp-controller="Download" asp-action="Index">Download</a>
                    <a class="navbar-item" asp-controller="Home" asp-action="Index" asp-fragment="community">Community</a>
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">Docs</a>
                        <div class="navbar-dropdown">
                            <a class="navbar-item" asp-controller="Reference" asp-action="Index">Language Reference</a>
                            <a class="navbar-item" asp-controller="iCore" asp-action="Index">Library Reference</a>
                            <a class="navbar-item" asp-controller="Compiler" asp-action="Index">Compiler Reference</a>
                        </div>
                    </div>
                    <div class="navbar-item field">
                        <p class="control has-icons-right">
                            <input id="search" class="input  is-rounded is-shadowless" type="search" placeholder="Search...">
                            <span class="icon  is-right mdi mdi-24px mdi-magnify">
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="footer">
        <div class="content has-text-centered">
            <p>Copyright © @DateTime.Now.Year <a href="https://github.com/orgs/qark-lang/people">Qark Team</a></p>
            <p>Qark is licensed under the <a asp-controller="Home" asp-action="License">MIT License</a></p>
        </div>
    </footer>
    <script src="~/dist/site.js"></script>
</body>
</html>